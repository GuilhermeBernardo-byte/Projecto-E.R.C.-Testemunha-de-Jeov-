
@{
    ViewBag.Title = "Pagina Ajuda";
}

<link rel="stylesheet" type="text/css" href="~/Content/estiloPaginasADM.css" />


<main id="main1" class="row d-flex">

    <div id="main1-header" class="navbar-fixed-top">

        <section class="section-header">
            <span>Menu</span>
            <span class="btn-group d-flex">
                <input id="input-pesquisa" type="search" class="form-control" placeholder="Pesquisar" />
                <button id="btn-ir" class="btn-default"><i class="glyphicon glyphicon-search"></i></button>
            </span>
        </section>

        <section class="section-header" style="color:#909090;display:flex;align-items:center;column-gap:2rem;font-size:2.2vh">
            <div class="dropdown" style="margin-right:120px">
                <span style="font-size:2.5vh" data-toggle="dropdown"><i class="glyphicon glyphicon-bell"></i></span>
                <ul class="dropdown-menu">
                    <li style="display:flex;align-items:center;font-size:2.2vh;height:6vh" class="dropdown-item bg-primary text-light">Notificações</li>
                    <li style="display:flex;align-items:center;column-gap:1rem;font-size:2.2vh;height:5vh" class="dropdown-item"><i class="glyphicon glyphicon-bell"></i>Fernando Afonso, enviou o seu relatório</li>
                    <li style="display:flex;align-items:center;column-gap:1rem;font-size:2.2vh;height:5vh" class="dropdown-item"><i class="glyphicon glyphicon-bell"></i>José Luis, está inativo</li>
                    <li style="display:flex;align-items:center;column-gap:1rem;font-size:2.2vh;height:5vh" class="dropdown-item">Ver todas notificações</li>
                </ul>
            </div>
            <div class="" style="display:flex;align-items:center;column-gap:1rem">
                <span style="display:flex;column-gap:1rem;font-size:2.5vh"><i class="glyphicon glyphicon-user"></i>Adm</span>

                <div class="dropdown" style="margin-right:120px">
                    <button class="btn dropdown-toggle" data-toggle="dropdown" style="height:40px"></button>
                    <ul class="dropdown-menu">
                        <li style="display:flex;align-items:center;font-size:2.2vh;height:6vh" class="dropdown-item bg-primary text-light">Minha conta</li>
                        <li style="display:flex;align-items:center;column-gap:1rem;font-size:2.2vh;height:5vh" class="dropdown-item"><i class="glyphicon glyphicon-cog"></i>Definicoes da conta</li>
                        <li style="display:flex;align-items:center;column-gap:1rem;font-size:2.2vh;height:5vh" class="dropdown-item"><i class="glyphicon glyphicon-log-out"></i>Terminar sessao</li>
                    </ul>
                </div>

            </div>
        </section>


    </div>


    <menu id="menu" class="esconderMenu navbar-fixed-top col-sm-0 col-md-2">
        <span id="logo" class="navbar-brand"><i class="fas fa-bars"></i>Logo</span>
        <span id="spanMenu">
