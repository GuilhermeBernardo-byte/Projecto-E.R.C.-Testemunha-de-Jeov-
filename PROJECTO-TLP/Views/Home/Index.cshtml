@{
    ViewBag.Title = "Loading...";
}
<style>

    #Tela-Inicial{
        width:100%;
        height:100%;
        background-color:#d2d2fa;
        color:#404040;
        box-shadow:0 0 2px silver;
        padding:2vh 5vh;
        display:grid;
        place-items:center;
    }
    #textoloading{
        font-size:2.5rem;
    }
    #circuloloading{
        width:20vw;
        height:20vw;
        background-color:#d2d2fa;
        border-radius:50%;
        border:2.5vw solid #f6f7f8;
        border-top:2.5vw solid #242849;
        border-right:2.5vw solid #242849;
        border-bottom:2.5vw solid #242849;

        animation-name:rodar;
        animation-iteration-count:infinite;
        animation-delay:0.3s;
        animation-timing-function:linear;
        animation-duration:2s;

        display:flex;
        align-items:center;
        justify-content:center;

        /*animation:rodar 2.5s linear infinite;*/

    }

    #iniciar{
        height:50px;
        visibility:hidden;
        margin:3vh 0 10vh 0;
        font-size:3vh;
    }
    
    
</style>






<div id="Tela-Inicial" class="">
    <h1 style="font-size:3em">Congregação</h1>
    <h2>Relatório de serviço de campo</h2>


    <div id="circuloloading">
    </div>
    <div id="textoloading">
        Loading...
    </div>

    <a id="iniciar" role="button" class="btn btn-primary col-xs-4"  @Html.ActionLink("Começar","Registro","Conta") </a>
    
</div>



