    }
    
    .btn-default{
        border:1px solid #cbd7fa;
    }


    .div-estatistica{
        padding:0;
        margin:0;
        column-gap:1rem;
      
    }
    .article-estatistica{
        height:600px;
        display:flex;
        flex-direction:column;
        background-color:#fafafa;
        background-color:#f5f5f6;

        color:#0c2752;
        margin-bottom:15px;
        padding:2rem;
    }
    .section-estatistica{
        height:100%;
        background-color:#fff;
        padding:1rem;
    }
    #imagem{
        height:95%;
        width:80%;
        display:flex;
        flex-direction:column;
        align-items:center;
    }
    .item-estatistica{
        display:flex;
        /*width:100%;*/
        justify-content:center;
        align-items:center;
        flex-wrap:wrap;
        padding:1rem;
        
    }
    .itens{
        /*width:40%;*/
        display:flex;
        flex-direction:column;
        align-items:center;
        justify-content:space-between;
        font-size:2vh;
    }
    .cor-item{
        display:block;
        height:20px;
        width:20px;
        border-radius:15%;
    }
    th{
        font-size:2.5vh;
    }
    td{
        font-size:2.2vh;
    }
    
    footer{
        display:flex;
        justify-content:space-around;
        font-size:2.2vh;
        color:#0c2752;
        /*font-weight:bold;*/

        border-top:1px solid #dfdfdf;
        background-color:#fff;
        
    }
   



   #main1-header{
       box-shadow:0 1px 5px #dfdfdf;
       /*height:75px;*/
       display:flex;
       flex-wrap:wrap;
       justify-content:space-between;
      
       align-items:center;
       padding:1rem 20vh 1rem 3vh;
       position:fixed;
       left:80px;
       background-color: #fff;
       
   }
   .section-header{
       display:flex;
       align-items:center;
       column-gap:1rem;
   }
   #input-pesquisa{
        width:30vh;
        height:4vh;
    }
   #btn-ir{
        background-color:#dfdfdf;
     
   }

    #logo{
        color:#6a81b3;
       color:#8690b0;
       font-size:3vh;
    }
    #spanMenu{
        width:100%;
       color:#8690b0;
       text-align:center;
       font-size:3vh;
    }

    /*1a3257    0c2752*/


    #menu{
    height: 100%;

    transition: 1s;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 5px 0;
    background-color: #0c2752;
    box-shadow: 7px 0 0 #8690b0;
   
    /*indica que vai esconder o conteudo q estiver fora da section*/ 
    overflow: hidden;
    /*position:fixed;*/
    left: 0;
    top: 0;
    margin:0;
  

}
 #menu:hover{
    width: 250px;
    transition: 1s;
} 
 
.esconderMenu{
    width: 80px;
    transition: 1s;
}
.mostrarMenu{
    width: 300px;
    transition: 1s;
 }

.opcoesMenu{
    width: 100%;
    height: 60%;
    display: flex;
    flex-direction: column;
    margin-top: 20px;
    color: #909090;
    color:#8690b0;
    font-size: 3vh;
}
.opcoesMenu i{
    width: 20px;
    margin-left: 30px;
}

.spanOpcaoMenu{
    width:100%;
    height:100%;
    display: flex;
    gap: 5rem;
    padding: 20px 0;
}
.spanOpcaoMenu:hover{
   background-color: #0c275f;
   color: #cbd7fa;
}

 #section-definicoesAjuda {
        width: 100%;
        display: flex;
        flex-direction: column;
        margin-top: 10vh;
        color: #8690b0;
        font-size: 3vh;
        align-self: flex-end;
    }
    .span-definicoesAjuda{
        width: 100%;
        height: 100%;
        display: flex;
        gap: 5rem;
        padding: 10px 0;
    }
 a{
        color:inherit;
        text-decoration:none;
        border:none;
        outline:none;
        text-decoration-style:none;
        text-decoration-line:none;

    }
 .link-menu{
      width:100px;
      height:100%;
 }
 a:hover{
     color:inherit;
        text-decoration:none;
        border:none;
        outline:none;
        text-decoration-style:none;
        text-decoration-line:none;
    }



</style>



<main id="main1" class="row d-flex" >
    
    <div id="main1-header" class="navbar-fixed-top">

        <section class="section-header">
            <span>Menu</span>
            <span class="btn-group d-flex">
                <input id="input-pesquisa" type="text" class="form-control"placeholder="Pesquisar" />
                <button id="btn-ir" class="btn-default"><i class="glyphicon glyphicon-search"></i></button>
            </span>
        </section>

        <section class="section-header" style="color:#909090;display:flex;align-items:center;column-gap:2rem;font-size:2.2vh">
            <span style="font-size:2.5vh"><i class="glyphicon glyphicon-bell"></i></span>
            <div class="" style="display:flex;align-items:center;column-gap:1rem">
                <span style="display:flex;column-gap:1rem;font-size:2.5vh"><i class="glyphicon glyphicon-user"></i>Adm</span>

                <div class="dropdown" style="margin-right:120px">
                    <button class="btn dropdown-toggle" data-toggle="dropdown" style="height:40px"></button>
                    <ul class="dropdown-menu">
                        <li style="display:flex;align-items:center;font-size:2.2vh;height:6vh" class="dropdown-item bg-primary text-light" >Minha conta</li>
                        <li style="display:flex;align-items:center;column-gap:1rem;font-size:2.2vh;height:5vh" class="dropdown-item"><i class="glyphicon glyphicon-cog"></i>Definicoes da conta</li>
                        <li style="display:flex;align-items:center;column-gap:1rem;font-size:2.2vh;height:5vh" class="dropdown-item"><i class="glyphicon glyphicon-log-out"></i>Terminar sessao</li>
                    </ul>
                </div>

            </div>
        </section>


    </div>

  
    <menu id="menu" class="esconderMenu navbar-fixed-top col-sm-0 col-md-2">
        <span id="logo" class="navbar-brand"><i class="fas fa-bars"></i>Logo</span>
        <span id="spanMenu">
            <span id="iconeMenu" class="">Menu</span>
        </span>

        <section class="opcoesMenu">
            <span id="spanInicio" class="spanOpcaoMenu"><i class="glyphicon glyphicon-home"></i>  <a class="link-menu" @Html.ActionLink("Congregação", "PaginaInicial", "Administrador") </span>
            <span id="spanInicio" class="spanOpcaoMenu"><i class="glyphicon glyphicon-briefcase"></i>  <a class="link-menu" @Html.ActionLink("Grupos", "PaginaInicial", "Administrador") </span>
            <span id="spanInicio" class="spanOpcaoMenu"><i class="glyphicon glyphicon-calendar"></i>  <a class="link-menu" @Html.ActionLink("Relatorio", "PaginaInicial", "Administrador")  </span>
            <span id="spanInicio" class="spanOpcaoMenu"><i class="glyphicon glyphicon-user" ></i>  <a class="" link-menu" @Html.ActionLink("Publicadores", "PaginaPublicadores", "Administrador")  </span>
            <span id="spanInicio" class="spanOpcaoMenu"><i class="glyphicon glyphicon-bookmark" ></i>  <a class="link-menu" @Html.ActionLink("Pioneiros", "PaginaInicial", "Administrador") </span>
            <span id="spanInicio" class="spanOpcaoMenu"><i class="glyphicon glyphicon-ban-circle"></i>  <a class="link-menu" @Html.ActionLink("Inativos", "PaginaInicial", "Administrador")  </span>
            <span id="spanInicio" class="spanOpcaoMenu"><i class="glyphicon glyphicon-edit"></i>  <a class="link-menu" @Html.ActionLink("Observacoes", "PaginaInicial", "Administrador") </span>
           
            @*glyphicon glyphicon-pushpin        glyphicon glyphicon-trash      glyphicon glyphicon-comment    glyphicon glyphicon-bookmark   glyphicon glyphicon-folder-open   glyphicon glyphicon-lock         glyphicon glyphicon-gift*@
           
        </section>

        <section id="section-definicoesAjuda" class="opcoesMenu">
            <span id="spanDefinicoes" class="span-definicoesAjuda"><i class="glyphicon glyphicon-cog"></i>Definicoes</span>
            <span id="spanAjuda" class="span-definicoesAjuda"><i class="glyphicon glyphicon-question-sign"></i>Ajuda</span>
        </section>
    </menu> 
  

    <div id="main1-content" class="row col-sm-12">
        <div class="col-md-7 col-xs-12 col-sm-12 div-favoritos  row">
            <span class="col-md-offset-1 col-md-7 col-xs-12 col-sm-12 span-title">Favoritos</span>
            <article class="col-md-offset-1 col-md-5 article-favoritos">
                <span class="span-descricao"><i style="font-size:15vh" class="glyphicon glyphicon-briefcase text-light"></i></span>
                <section class="section-conteudo">
                    <span class="conteudo-title">Grupos de servico</span>
                    <div class="row col-xs-12">
                        <button class="btn btn-primary col-xs-6">Visualizar</button>
                        <button class="btn btn-default col-xs-6">Adicionar</button>
                    </div>
                </section>
            </article>
            <article class="col-md-5 article-favoritos">
                <span class="span-descricao"><i style="font-size:15vh" class="glyphicon glyphicon-calendar text-light"></i></span>
                <section class="section-conteudo">
                    <span class="conteudo-title">Relatorio</span>
                    <div class="row col-xs-12">
                        <button class="btn btn-primary col-xs-6" >Visualizar</button>
                        <button class="btn btn-default col-xs-6">Adicionar</button>
                    </div>
                </section>
            </article>
            <article class="col-md-offset-1 col-md-5 article-favoritos">
                <span class="span-descricao"><i style="font-size:15vh" class="glyphicon glyphicon-bookmark text-light"></i></span>
                <section class="section-conteudo">
                    <span class="conteudo-title">Pioneiros</span>
                    <div class="row col-xs-12">
                        <button class="btn btn-primary col-xs-6" >Visualizar</button>
                        <button class="btn btn-default col-xs-6">Adicionar</button>
                    </div>
                </section>
            </article>
            <article class="col-md-5 article-favoritos">
                <span class="span-descricao"><i style="font-size:15vh" class="glyphicon glyphicon-user text-light"></i></span>
                <section class="section-conteudo">
                    <span class="conteudo-title">Publicadores</span>
                    <div class="row col-xs-12">
                        <button class="btn btn-primary col-xs-6" >Visualizar</button>
                        <button class="btn btn-default col-xs-6">Adicionar</button>
                    </div>
                   
                </section>
            </article>
           
        </div>

        

        <div class="col-md-5 col-xs-12 col-sm-12 div-estatistica  row">
            <span class="span-title">Estatistica</span>

            <article class="col-md-12 article-estatistica">
                
                @*<section class="col-md-12 section-estatistica">
                    <span class="conteudo-title">Geral </span>
                    <hr />
                </section>*@
                <section class="col-md-12 section-estatistica">
                    <span class="conteudo-title">Mes passado</span>
                    <hr />
                    
                    <div class="text-center" style="margin:auto" id="imagem">
                        <span class="span-descricao"><img style="width:100%;height:100%" alt="icone-imagem" src="~/fonts/Captura de ecrã_27-3-2024_231211_.jpeg" /></span>
                        @*<img  alt="estatistica do mes passado" src="~/fonts/Captura de ecrã_27-3-2024_231211_.jpeg" />*@

                        <div class="item-estatistica row col-md-12">
                            <div class="itens col-xs-6">Publicadores com actividade <span style="background-color:blue" class="cor-item"></span></div>
                            <div class="itens col-xs-6">Publicadores sem actividade <span style="background-color:darkorange" class="cor-item"></span></div>
                            <div class="itens col-xs-6">Pionerios <span style="background-color:yellow" class="cor-item"></span></div>
                            <div class="itens col-xs-6">Estudos dirigidos<span style="background-color:lightcoral" class="cor-item"></span></div>
                        </div>
                    </div>

                </section>

     

            </article>
           
        </div>
    </div>

    
    @*<footer class="navbar-fixed-bottom">
        <span>Sistema de entrega de relatorios</span>
        <span>2024</span>
    </footer>*@ 



</main>

