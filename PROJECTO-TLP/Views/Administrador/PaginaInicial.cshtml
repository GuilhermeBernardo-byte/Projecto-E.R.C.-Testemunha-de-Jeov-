    }
   
   

    #main1{
        /*height:100%;*/
        width:100%;
        margin:0;
        padding:0;
        background-color:#fafafa;
        background-color:#f5f5f6;
       
    }
    #main1-content{
        padding:10vh 0 0 15vh;
        display:flex;
        flex-wrap:wrap;
   }
    .div-favoritos{
        padding:0;
        margin:0;
        gap:2rem;
